extends ../layout

block content
  .row.breadcrumbs
    .col-sm-12
      a(href='/')= brigade.name
      | &nbsp;&nbsp;/&nbsp;
      a(href='/contact') Contact
      | &nbsp;&nbsp;/&nbsp;
      a(href='/admin/contact/edit') Edit
  .page-header
    h3 Manage contact page
    .row
      .col-sm-6
      form.row.form-horizontal(action='/admin/contact', method='POST')
        input(type='hidden', name='_csrf', value=_csrf)
        table.table
          thead
            tr
              th Username
              th Name
              th Display contact info to public?
              th Display Order
          tbody
            each user in users
              tr
                td.username= user.username
                td.name= user.profile.name
                td.select
                  input(type='checkbox', name=user.username+'[showcontact]' id='showcontact', checked=user.profile.showcontact)
                td.col-sm-5
                  input.form-control(type='number', name=user.username+'[contactrank]', value=user.profile.contactpagerank, required)
          .form-group
            button.btn.btn.btn-primary(type='submit')
              i.fa.fa-pencil
              | Submit changes
